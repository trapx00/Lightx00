<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trapx00.lightx00.client.presentation.adminui.UserManagementUiController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <HBox alignment="CENTER_LEFT" maxWidth="2000">
        <FontAwesomeIconView fill="black" glyphName="ADDRESS_CARD" glyphSize="22" />
        <Text text="职员信息管理">
            <font>
                <Font size="20.0" />
            </font></Text>
        <padding>
            <Insets right="10.0" />
        </padding>
    </HBox>

    <JFXMasonryPane prefHeight="200.0" prefWidth="780.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <StackPane alignment="CENTER_LEFT" maxHeight="30">
            <JFXTextField fx:id="tfSearch" labelFloat="true" maxWidth="150.0" prefWidth="150.0" promptText="任意字段查找" />
         <padding>
            <Insets left="20.0" right="10.0" />
         </padding>
        </StackPane>
        <StackPane alignment="CENTER_LEFT" maxHeight="30">
            <JFXComboBox fx:id="cbPosition" labelFloat="true" maxWidth="150.0" prefWidth="150.0" promptText="选择部门" />
         <padding>
            <Insets left="10.0" right="20.0" />
         </padding>
        </StackPane>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </JFXMasonryPane>
    <HBox alignment="CENTER_LEFT" maxWidth="2000">
        <MaterialIconView glyphName="ACCOUNT_BOX" glyphSize="28" />
        <Text text="现有职员信息">
            <font>
                <Font size="20.0" />
            </font></Text>
        <padding>
            <Insets right="10.0" />
        </padding>
    </HBox>
    <JFXTreeTableView fx:id="tableEmployee" prefHeight="500.0" prefWidth="800.0">
        <columns>
            <JFXTreeTableColumn fx:id="tcId" prefWidth="200" text="工号" />
            <JFXTreeTableColumn fx:id="tcName" editable="false" prefWidth="150" text="姓名" />
            <JFXTreeTableColumn fx:id="tcWorkDate" prefWidth="150" text="入职时间" />
            <JFXTreeTableColumn fx:id="tcPosition" prefWidth="150" text="就职单位" />
            <JFXTreeTableColumn fx:id="tcState" prefWidth="150" text="就职状态" />
        </columns>
    </JFXTreeTableView>
    <HBox alignment="CENTER_LEFT" maxHeight="60.0" maxWidth="2000.0" prefHeight="60.0" prefWidth="600.0">
        <padding>
            <Insets bottom="10" right="20" top="10" />
        </padding>
        <JFXButton fx:id="btnAdd" buttonType="RAISED" onAction="#onBtnAddClicked" style="-fx-background-color: #424242; -fx-text-fill: #FFFFFF" text="增加">
            <graphic>
                <MaterialIconView glyphName="ADD" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF" />
            </graphic>
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </JFXButton>

        <JFXButton fx:id="btnModify" buttonType="RAISED" onAction="#onBtnModifyClicked" style="-fx-background-color: #232e5f; -fx-text-fill: #FFFFFF" text="更改">
            <graphic>
                <MaterialIconView glyphName="MODE_EDIT" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF" />
            </graphic>
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </JFXButton>
        <JFXButton fx:id="btnDelete" buttonType="RAISED" onAction="#onBtnDeleteClicked" style="-fx-background-color: #bf360c; -fx-text-fill: #FFFFFF" text="删除">
            <graphic>
                <MaterialIconView glyphName="DELETE" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF" />
            </graphic>
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </JFXButton>
    </HBox>

</VBox>
